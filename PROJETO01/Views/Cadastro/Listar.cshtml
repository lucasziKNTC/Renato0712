@model List<PROJETO01.Modelos.Cadastro>

<h3>
    CADASTRO DE PESSOAS
    <a class="btn btn-sm btn-primary float-right" href="/Cadastro/Adicionar">
        + ADICIONAR
    </a>
</h3>

<table class="table table-hover ">
    <thead>
        <tr>
            <th>Nome</th>
            <th>PessoaId</th>
            <th>Endereço</th>
            <th>Cpf</th>
            <th>Cep</th>
            <th>Numero</th>

            <th>Bairro</th>
            <th>Complemento</th>
            <th>CidadeId</th>


            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Nome</td>
            <td>@item.PessoaId</td>
            <td>@item.Endereço</td>
            <td>@Convert.ToInt64(@item.Cpf).ToString(@"000\.000\.000\-00")</td>
            <td>@item.Cep</td>
            <td>@item.Numero</td>
            <td>@item.Bairro</td>
            <td>@item.Complemento</td>
            <td>@item.CidadeID</td>
         



            <td>
                <a href="/Cadastro/Editar?PessoaId=@item.PessoaId" class="btn btn-sm btn-warning">
                    Editar
                </a>
                <a href="/Cadastro/Excluir?PessoaId=@item.PessoaId" class="btn btn-sm btn-danger">
                    Excluir
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
